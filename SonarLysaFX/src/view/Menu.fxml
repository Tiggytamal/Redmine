<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?import java.net.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.DialogPane?>

<HBox fx:id="box" fx:controller="control.view.MenuViewControl" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml">
	<children>
		<MenuBar HBox.hgrow="ALWAYS">
			<menus>
				<Menu text="Fonctions">
					<items>
						<MenuItem fx:id="mensuel" text="Création Vue MEP/TEP" onAction="#afficher" disable="true" />
						<MenuItem fx:id="suivi" text="Fichiers de Suivi" onAction="#afficher" disable="true" />
						<MenuItem fx:id="autres" text="Création Autres Vues" onAction="#afficher" disable="true" />
					</items>
				</Menu>
				<Menu text="Outils">
					<items>
						<MenuItem fx:id="options" text="Options" onAction="#afficher" disable="true" />
						<MenuItem fx:id="planificateur" text="Planificateur" onAction="#afficher" disable="true" />
						<MenuItem fx:id="majvues" text="Mise à jour vues" onAction="#majVues" disable="true" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
		<Button fx:id="connexion" text="Connexion" onAction="#openPopup" />
		<Button fx:id="deConnexion" text="Deconnexion" onAction="#deco" />
	</children>
</HBox>


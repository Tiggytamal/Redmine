<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?import java.net.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<SplitPane fx:id="splitPane" fx:controller="control.view.OptionViewControl" dividerPositions="0.20" prefHeight="400.0" prefWidth="600.0"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141">
	<items>
		<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
			<children>
				<ListView fx:id="options">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<String fx:value="Chargement fichiers" />
							<String fx:value="Paramètres" />
						</FXCollections>
					</items>
				</ListView>
			</children>
		</AnchorPane>
		<GridPane fx:id="rightSide" prefWidth="300.0" prefHeight="400.0">
			<children>
				<VBox fx:id="chargement" alignment="center">
					<!-- Bouton pour créer la nouvelle vue dans Sonar -->
					<Region  prefHeight="20" VBox.vgrow="ALWAYS"/>
					<Button text="Charger Lots Pic" fx:id="lotsPic" onAction="#chargerLotsPic" alignment="CENTER" />
					<Region  prefHeight="20"/>
					<Button text="Charger Applications" fx:id="applis" onAction="#chargerApplis" alignment="CENTER" />
					<Region  prefHeight="20" />
					<Button text="Charger Referentiel Clarity" fx:id="clarity" onAction="#chargerClarity" alignment="CENTER" />
					<Region  prefHeight="20" VBox.vgrow="ALWAYS"/>
				</VBox>
			</children>
		</GridPane>
	</items>
</SplitPane>